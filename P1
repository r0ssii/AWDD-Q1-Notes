if (email === "") {
			emailError.innerHTML = "Please enter an email address";
			valid = false;
		}
        else if (!isValidEmailFormat(email)) {
            emailError.innerHTML = "Email address format is invalid";
			valid = false;
        }
		else if (email.length > 50) {
			emailError.innerHTML = "Email address must be less that 50 characters";
			valid = false;
		}
    
    
